{
	"$schema": "node_modules/@biomejs/biome/configuration_schema.json",
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"indentStyle": "space",
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"lineWidth": 100,
			"quoteStyle": "single"
		}
	},
	"linter": {
		"rules": {
			"style": {
				"noUnusedTemplateLiteral": "off"
			},
			"correctness": {},
			"suspicious": {},
			"complexity": {
				"noBannedTypes": "off"
			}
		}
	}
}
